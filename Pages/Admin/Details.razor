@page "/admin/tainghes/details/{id:long}"
<h3 class="bg-info text-white text-center p-1">Details</h3>
<table class="table table-sm table-bordered table-striped">
    <tbody>
        <tr><th>Mã</th><td>@Tainghe.TaingheID</td></tr>
        <tr><th>Tên tai nghe</th><td>@Tainghe.TenTainghe</td></tr>
        <tr><th>Mô tả</th><td>@Tainghe.Mota</td></tr>
        <tr><th>Loại</th><td>@Tainghe.Loai</td></tr>
        <tr><th>Giá</th><td>@Tainghe.Gia.ToString("C")</td></tr>
    </tbody>
</table>
<NavLink class="btn btn-warning" href="@EditUrl"> sửa </NavLink>
<NavLink class="btn btn-secondary" href="/admin/tainghes">Quay lại</NavLink>
@code {
    [Inject]
    public IHPStoreRepository Repository { get; set; }
    [Parameter]
    public long Id { get; set; }
    public Tainghe Tainghe { get; set; }
    protected override void OnParametersSet()
    {
        Tainghe = Repository.Tainghes.FirstOrDefault(b => b.TaingheID == Id);
    }
    public string EditUrl => $"/admin/tainghes/edit/{Tainghe.TaingheID}";
}